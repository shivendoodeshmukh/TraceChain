{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.2.0/schema.json",
  "global": {
    "fabricVersion": "2.5.4",
    "tls": true,
    "engine": "docker",
    "peerDevMode": false,
    "tools": { "explorer": true }
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.example.com"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "raft",
          "instances": 3
        }
      ],
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Supplier",
        "domain": "supplier.example.com"
      },
      "peer": {
        "instances": 2,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Manufacturer",
        "domain": "manufacturer.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Distributor",
        "domain": "distributor.example.com"
      },
      "peer": {
        "instances": 2,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    }
  ],
  "channels": [
    {
      "name": "supply",
      "orgs": [
        {
          "name": "Supplier",
          "peers": [
            "peer0",
            "peer1"
          ]
        },
        {
          "name": "Manufacturer",
          "peers": [
            "peer0"
          ]
        }
      ]
    },
    {
      "name": "distribution",
      "orgs": [
        {
          "name": "Manufacturer",
          "peers": [
            "peer0"
          ]
        },
        {
          "name": "Distributor",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "rawMaterialTokenContract",
      "version": "0.0.5",
      "lang": "golang",
      "channel": "supply",
      "directory": "./chaincode/rawMaterialTokenContract"
    },
    {
      "name": "productTokenContract",
      "version": "0.0.1",
      "lang": "golang",
      "channel": "distribution",
      "directory": "./chaincode/productTokenContract"
    }
  ]
}