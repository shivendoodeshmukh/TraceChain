{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.2.0/schema.json",
  "global": {
    "fabricVersion": "2.5.4",
    "tls": false,
    "engine": "docker",
    "peerDevMode": false,
    "tools": { "explorer": true }
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.example.com"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "solo",
          "instances": 1
        }
      ],
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Pharma",
        "domain": "pharma.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Hospital",
        "domain": "hospital.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "IoTTracker",
        "domain": "tracker.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "LevelDb"
      },
      "tools": {
        "fabloRest": true
      }
    }
  ],
  "channels": [
    {
      "name": "supply",
      "orgs": [
        {
          "name": "Pharma",
          "peers": [
            "peer0"
          ]
        },
        {
          "name": "Hospital",
          "peers": [
            "peer0"
          ]
        },
        {
          "name": "IoTTracker",
          "peers": [
            "peer0"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "LogContract",
      "version": "0.0.5",
      "lang": "golang",
      "channel": "supply",
      "directory": "./chaincode/LogContract",
      "endorsement": "OR('Pharma.member', 'IoTTracker.member')"
    },
    {
      "name": "GenerateCertificate",
      "version": "0.0.5",
      "lang": "golang",
      "channel": "supply",
      "directory": "./chaincode/GenerateCertificate",
      "endorsement": "AND('Hospital.member')"
    }
  ]
}